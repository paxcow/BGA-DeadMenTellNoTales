{
    "name": "boardgamearena/deadmenpax",
    "description": "Dead Men Tell No Tales board game implementation for Board Game Arena",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-reflection": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Bga\\Games\\DeadMenPax\\": "modules/php/",
            "Bga\\GameFramework\\": "vendor/bga-framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/Server/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
