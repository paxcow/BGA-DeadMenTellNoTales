{
	"intelephense.files.exclude": [
		"**/.git/**",
		"**/.svn/**",
		"**/.hg/**",
		"**/CVS/**",
		"**/.DS_Store/**",
		"**/vendor/**/{Tests,tests}/**",
		"**/.history/**",
		"**/vendor/**/vendor/**"
	],
	"intelephense.environment.phpVersion": "8.2.17",
	"emmet.syntaxProfiles": {
		"tpl": "html"
	},
	"emeraldwalk.runonsave": {
		"commands": [
			{
				"match": ".*\\.ts$",
				"isAsync": true,
				"cmd": "npm run build:ts"
			},
			{
				"match": ".*\\.scss$",
				"isAsync": true,
				"cmd": "npm run build:scss"
			}
		]
	},
	  "chatgpt.preferWsl": true
}